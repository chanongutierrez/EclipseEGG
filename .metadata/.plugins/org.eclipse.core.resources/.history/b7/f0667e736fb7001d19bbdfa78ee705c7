package currency;
import java.util.Locale;
import java.util.Scanner;

import util.CurrentCurrency;
public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		double peso;
		System.out.println("ingrese el valor actual del dolar ");
		CurrentCurrency.dolar=sc.nextDouble();
		System.out.println("ingrese el valor actual del Euro ");
		CurrentCurrency.euro=sc.nextDouble();
		System.out.println("ingrese la cantidad de pesos: ");
		peso=sc.nextDouble();
		sc.close();
		System.out.printf(peso+" pesos equivale a: %.2f%n Dolares" , CurrentCurrency.convertToDolar(peso));
		System.out.printf(peso+" pesos equivale a: %.2f%n Euros", CurrentCurrency.convertToEuro(peso)); 
	}

}
