package currency;
import java.util.Scanner;

import util.CurrentCurrency;
public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner sc = new Scanner(System.in);
		double peso;
		System.out.println("ingrese la cantidad de pesos: ");
		peso=sc.nextDouble();
		
		System.out.println(peso+" pesos equivale a: "+ CurrentCurrency.convertToDolar(peso) + " Dolares");
		System.out.println(peso+" pesos equivale a: "+ CurrentCurrency.convertToEuro(peso)+ " Euros"); 
	}

}
