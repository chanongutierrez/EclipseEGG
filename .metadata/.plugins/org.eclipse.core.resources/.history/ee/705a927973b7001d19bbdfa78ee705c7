package util;

public class Tablero {
	public static void obtenerCasilla(char columna, int fila) {
		switch (columna.toUpperCase()) {
		case 'A', 'C', 'E', 'G':
			if (fila % 2 == 0) {
				System.out.println("casilla blanca");
			} else {

				System.out.println("casilla negra");

			}
			break;
		case 'B', 'D', 'H':
			if (fila % 2 == 0) {
				System.out.println("casilla negra");
			} else {

				System.out.println("casilla blanca");

			}
			break;
		}
	}
}
